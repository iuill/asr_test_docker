# Real-time ASR Server (k2-v2) - CPU Version
# Requires: asr-test-k2-v2-base:cpu

FROM asr-test-k2-v2-base:cpu

WORKDIR /app

# Copy application code
COPY pyproject.toml /app/
COPY src/ /app/src/

# Install the application
RUN pip install --no-cache-dir -e .

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run the server
CMD ["python", "-m", "src.main", "--device", "cpu", "--host", "0.0.0.0", "--port", "8000"]
